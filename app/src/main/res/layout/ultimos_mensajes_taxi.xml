<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="120dp" android:id="@+id/listaTaxi">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_ultimos_mensajes_taxi"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginBottom="8dp"

            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            app:civ_border_width="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/btn_star_big_on"/>

    <TextView
            android:id="@+id/usuario_textview_ultimos_mensajes_taxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="16dp"
            tools:text="Usuario"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/mensaje_textview_ultimos_mensajes_taxi"
            app:layout_constraintStart_toEndOf="@+id/img_ultimos_mensajes_taxi"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
            android:id="@+id/mensaje_textview_ultimos_mensajes_taxi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/ultimos"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/img_ultimos_mensajes_taxi"
            app:layout_constraintTop_toBottomOf="@+id/usuario_textview_ultimos_mensajes_taxi"/>
</android.support.constraint.ConstraintLayout>